    <!--<item name="colorPrimary">@color/md_white_1000</item>-->
    <!--<item name="colorPrimaryDark">@color/md_green_700</item>-->
    <!--<item name="colorAccent">@color/md_green_500</item>-->
    <!--<item name="android:textColorPrimary">@color/primary_text_light</item>-->
    <!--</style>-->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/app_button</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CareGiverActivity" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/app_button</item>
        <item name="colorPrimary">@color/colorRequestService</item>
        <item name="colorPrimaryDark">#6A9DD9</item>
        <item name="colorAccent">@color/colorRequestService</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RequestServiceForm" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/app_button</item>
        <item name="colorPrimary">@color/colorSecondaryAccent</item>
        <item name="colorPrimaryDark">#C7A265</item>
        <item name="colorAccent">@color/colorRequestService</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CareRecipientActivity" parent="AppBaseTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CareRecipientToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorGreyText</item>
        <item name="android:textColorSecondary">@color/colorGreyText</item>
        <item name="actionMenuTextColor">@color/colorGreyText</item>
        <item name="titleTextColor">@color/colorGreyText</item>
        <item name="subtitleTextColor">@color/colorGreyText</item>
        <item name="colorControlNormal">@color/colorGreyText</item>
    </style>

    <style name="ToolbarIconColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ReviewsActivity" parent="AppBaseTheme.NoActionBar"></style>
</resources>